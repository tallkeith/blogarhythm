      <td>Column content</td>
      <td> </td>
      <td> </td>
      <td> </td>
      <td> </td>
    </tr>
  <tbody>
    <% @timelines.each do |timeline| %>
      <tr>
        <td><%= timeline.user %></td>
        <td><%= timeline.image_url %></td>
        <td><%= timeline.image_date %></td>
        <td><%= timeline.image_source %></td>
        <td><%= timeline.likes %></td>
        <td><%= timeline.shares %></td>
        <td><%= timeline.retweets %></td>
        <td><%= timeline.number_of_comments %></td>
        <td><%= link_to 'Show', timeline %></td>
        <td><%= link_to 'Edit', edit_timeline_path(timeline) %></td>
        <td><%= link_to 'Destroy', timeline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

